<% content_for :page_title do %>
<%= Guides.meta["title"] %>: Credits
<% end %>

<% content_for :header_section do %>
<h2>Credits</h2>

<p>We'd like to thank the following people for their tireless contributions to this project.</p>
<% end %>

<% content_for :sidebar do %>
<h3>Become A Contributor</h3>
<p>
  Contributing to SproutCore<br>
  <a>Javascript Style Guides</a><br>
  <a>Committer guidelines</a><br>
  <a>Documentation guidelines</a><br>
</p>
<% end %>

<h3 class="group"><%= Guides.meta["team_name"] %></h3>

<% Guides.meta["authors"].each do |group, authors| %>
  <h3 class="section"><%= group %></h3>
  <% authors.each do |author| %>
    <% img = author["image"] || "strobe/dude.png" %>
    <%= author(author["name"], author["nick"], img) do %>
      <%= author["description"].html_safe %>
    <% end %>
  <% end %>
<% end %>

